{
  "packages": [
    "packages/*"
  ],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent",
  "command": {
    "version": {
      "allowBranch": "master"
    },
    "publish": {
      "ignoreChanges": [
        "**/__tests__/**",
        "**/jest/**",
        "jest.config.js",
        ".npmignore",
        ".gitignore",
        "*.md",
        "*.MD",
        "*.stories.jsx"
      ],
      "message": "release: publish"
    }
  }
}
